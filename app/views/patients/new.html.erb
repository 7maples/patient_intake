<h1>New Patient</h1>

<%= simple_form_for(@patient) do |f|%>
  <%= f.error_notification %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :date_of_birth %>
  <%= f.input :sex %>
  <%= f.input :weight %>
  <%= f.input :conditions, as: :check_boxes %>

  <%= f.error :base %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>



